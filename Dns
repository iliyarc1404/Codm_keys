    <script>
        // ØªØ¨â€ŒÙ‡Ø§
        const tabs = document.querySelectorAll('.tab');
        const panels = {
            wireguard: document.getElementById('wireguardPanel'),
            history: document.getElementById('historyPanel'),
            dns: document.getElementById('dnsPanel'),
            tools: document.getElementById('toolsPanel'),
            settings: document.getElementById('settingsPanel'),
        };
        tabs.forEach(tab => {
            tab.addEventListener('click', () => {
                tabs.forEach(t => t.classList.remove('active'));
                tab.classList.add('active');
                const tabName = tab.getAttribute('data-tab');
                for (const key in panels) {
                    if(key === tabName) panels[key].classList.add('active');
                    else panels[key].classList.remove('active');
                }
            });
        });

        // ØªÙˆÙ„ÙŠØ¯ Ù†Ø§Ù… ØªØµØ§Ø¯ÙÛŒ Ø³Ø§Ø¯Ù‡
        function generateRandomName() {
            const prefixes = ['Spider', 'Cheat', 'Fast', 'Secure', 'Net', 'Ultra'];
            const suffixes = ['Config', 'VPN', 'Wire', 'Guard', 'Proxy', 'Net'];
            const randPrefix = prefixes[Math.floor(Math.random()*prefixes.length)];
            const randSuffix = suffixes[Math.floor(Math.random()*suffixes.length)];
            const randNum = Math.floor(Math.random()*1000);
            return `${randPrefix}-${randSuffix}-${randNum}`;
        }

        const randomNameBtn = document.getElementById('randomNameBtn');
        const configNameInput = document.getElementById('configName');
        randomNameBtn.addEventListener('click', () => {
            configNameInput.value = generateRandomName();
        });

        // Ù†ÙˆØªÛŒÙÛŒÚ©ÛŒØ´Ù† Ø³Ø§Ø¯Ù‡
